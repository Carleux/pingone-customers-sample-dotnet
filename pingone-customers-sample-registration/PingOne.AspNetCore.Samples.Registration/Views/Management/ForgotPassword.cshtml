@model PingOne.AspNetCore.Samples.Registration.Models.PasswordRecoveryViewModel

<h3>Enter Username or Email</h3>
<br />
<form method="post" asp-action="ForgotPassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="PasswordRegex" class="form-control" />
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}